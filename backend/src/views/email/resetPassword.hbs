{{#> mailBody}}

  {{#*inline "intro-content"}}
    <div style="padding:10px 40px; text-align:center;">
      <p style="font-size:30px; margin:0;">
        <strong>🔐 Passwort zurücksetzen</strong>
      </p>
    </div>
  {{/inline}}

  <div style="padding:10px 40px; line-height:1.5; color:#555555; font-family:Montserrat, sans-serif;">
    <p style="font-size:14px; margin:0;">
      Hallo {{name}},
    </p>

    <p style="margin:16px 0 0 0;">
      Du kannst dein Passwort mit folgendem Link zurücksetzen:
    </p>

    <p style="margin:8px 0 0 0;">
      <a href="{{resetUrl}}" style="color:#3366cc; text-decoration:underline;">
        Passwort ändern
      </a>
    </p>

    <p style="margin:24px 0 0 0;">
      Viele Grüße,<br/>
      Dein TLSoft HR Platform Team
    </p>
  </div>

{{/mailBody}}
